<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Ryan Andrew Foster
    (s2136071) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SearchView
                android:id="@+id/road_Filter"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="search Road...">

            </SearchView>

            <SearchView
                android:id="@+id/date_Filter"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="search Date..." />
        </LinearLayout>

        <Button
            android:id="@+id/btnCI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnGetCI" />

        <Button
            android:id="@+id/btnRW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnGetRW" />

        <Button
            android:id="@+id/btnPRW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnGetPRW" />


        <ListView
            android:id="@+id/listFeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>